{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package (./kbot start)",
            "preLaunchTask": "make_build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "console": "integratedTerminal",
            "env": {
                "METRICS_HOST": "localhost:4317"
            },
            "args": [ "start" ]
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Connect to server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1"
        },
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.run",
                "MyTestFunction"
            ]
        }

    ]
}